meta(charset='utf-8')
meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')

if config.author
    meta(name='author', content=config.author)

block page_description
    meta(name='description', content=config.description)

title
    block window_title
    = config.title

link(href=config.root + 'favicon.png', rel='icon')

link(rel='alternate', href=theme.rss ? theme.rss : config.root + 'atom.xml', title='config.title', type='application/atom.xml')

link(href='//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css', rel='stylesheet')
link(href='//getbootstrap.com/dist/css/bootstrap.css', rel='stylesheet', type='text/css')
link(href=config.root + 'css/app.css', media='screen, projection', rel='stylesheet')